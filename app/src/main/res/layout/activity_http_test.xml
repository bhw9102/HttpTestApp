<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.nolgong.httptestapp.HttpTestActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="ipipip"
            android:textSize="@dimen/common_font_size"
            android:id="@+id/currentIp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <EditText
            android:layout_width="800dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/common_font_size"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:hint="@string/sample_address"
            android:id="@+id/addressEdit"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SET"
            android:textSize="@dimen/common_font_size"
            android:layout_margin="20dp"
            android:id="@+id/addressEditButton"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="START"
            android:textSize="@dimen/common_font_size"
            android:layout_margin="20dp"
            android:id="@+id/startButton"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="END"
            android:textSize="@dimen/common_font_size"
            android:layout_margin="20dp"
            android:id="@+id/endButton"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="@dimen/high_font_size"
            android:id="@+id/slash"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/slash"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:id="@+id/responseBox">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Response"
                android:textSize="@dimen/common_font_size"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/high_font_size"
                android:id="@+id/response"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_toEndOf="@id/slash"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request"
                android:textSize="@dimen/common_font_size"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/high_font_size"
                android:id="@+id/request"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/middle_font_size"
            android:id="@+id/httpPercent"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="@dimen/middle_font_size"
            android:id="@+id/percentUnit"
            android:layout_toRightOf="@id/httpPercent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="@dimen/common_font_size"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/percentUnit"
            android:id="@+id/fail"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fail : "
            android:textSize="@dimen/common_font_size"
            android:layout_toLeftOf="@id/fail"
            android:layout_alignBottom="@id/percentUnit"
            android:layout_marginLeft="20dp"
            android:id="@+id/failLabel"/>
    </RelativeLayout>

</LinearLayout>
